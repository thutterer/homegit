[core]
  pager = less

[alias]
  br = branch
  ci = commit
  co = checkout
  cp = cherry-pick
  df = diff
  pl = pull
  pu = push
  st = status --short
  lg = log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  ls = !git --no-pager log --oneline master..HEAD
  news = shortlog -n --after='2 weeks ago'
  cleanup = "!git branch --merged | egrep -v '(^\\*|master|dev)' | xargs -r git branch -d"
  branches = "!git for-each-ref --sort='-committerdate' --format='%(refname)%09%(committerdate)' refs/heads | sed -e 's-refs/heads/--' | head -n 20 | column -t"

[push]
  default = current

[pull]
  default = current

[credential]
  helper = cache --timeout=300

[color]
  ui = auto

